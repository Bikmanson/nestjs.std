{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "monorepo": true,
  "root": "apps/gateway",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "projects": {
    "product-storage": {
      "type": "application",
      "root": "apps/product-storage",
      "entryFile": "main",
      "sourceRoot": "apps/product-storage/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-storage/tsconfig.app.json",
        "assets": [
          "*.env"
        ]
      }
    },
    "user-management": {
      "type": "application",
      "root": "apps/user-management",
      "entryFile": "main",
      "sourceRoot": "apps/user-management/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-management/tsconfig.app.json",
        "assets": [
          "*.env"
        ]
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "cache": {
      "type": "library",
      "root": "libs/cache",
      "entryFile": "index",
      "sourceRoot": "libs/cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cache/tsconfig.lib.json"
      }
    }
  }
}